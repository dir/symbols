{
  "name": "symbols",
  "private": true,
  "description": "Workspace orchestration for vscode-symbols and zed-symbols",
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "setup": "git submodule update --init --recursive",
    "workspace:status": "git submodule status --recursive && git status --short",
    "workspace:sync": "node ./scripts/workspace-sync.mjs",
    "workspace:publish": "node ./scripts/workspace-publish.mjs",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix"
  },
  "devDependencies": {
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0"
  }
}
